{
    "git.ignoreLimitWarning": true,
    "editor.suggestSelection": "first",
    "editor.autoIndent" : "full",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.colorTheme": "Atom One Dark",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "cucumberautocomplete.onTypeFormat": true,
    "cucumberautocomplete.steps": [
        "./eProc/implementation/**/*.js",
        "./iContract/implementation/**/*.js",
        "./eInvoice/implementation/**/*.js",
        "./iRequest/implementation/**/*.js"
    ],
    "cucumberautocomplete.syncfeatures": ["./Contract/feature/*.feature","./eProc/features/**/*.feature","./eInvoice/features/**/*.feature","./iRequest/features/**/*.feature"],
    "cucumberautocomplete.strictGherkinCompletion": true
}